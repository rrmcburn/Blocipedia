<% if current_user.premium? %>
  <h1>Downgrade Your Account </h1>
  <p>Please note, all of your private wikis will now be public. Be careful!</p>
  <%= link_to "Downgrade Your Account", downgrade_index_path, method: :create, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to downgrade?'} %>
<% else %>
  <h4>You have already downgraded</h4>
<% end %>
